{
  "name": "nodervisor",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node server/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "dev:dashboard": "vite --config client/vite.config.js",
    "build:dashboard": "vite build --config client/vite.config.js",
    "migrate": "knex migrate:latest --knexfile knexfile.cjs",
    "seed": "knex seed:run --knexfile knexfile.cjs"
  },
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "async": "^3.2.6",
    "bcrypt": "^6.0.0",
    "connect-session-knex": "^5.0.0",
    "cookie-parser": "^1.4.7",
    "ejs": "^3.1.10",
    "errorhandler": "^1.5.1",
    "express": "^4.19.2",
    "express-session": "^1.18.2",
    "knex": "^3.1.0",
    "method-override": "^3.0.0",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "serve-favicon": "^2.5.1",
    "sqlite3": "^5.1.7",
    "stylus": "^0.64.0",
    "supervisord": "^0.1.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "cross-env": "^10.0.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "vite": "^5.4.2"
  }
}
